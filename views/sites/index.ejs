<% layout('layouts/boilerplate') %>
    <div id="cluster-map"></div>
    <h1>All Sites</h1>

    <% for (let site of sites) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <% if(site.images.length) { %>
                    <img crossorigin="anonymous" class="img-fluid" alt="" src="<%= site.images[0].url %>">
                    <% }else { %>
                        <img crossorigin="anonymous" src="https://res.cloudinary.com/dgux66ig0/image/upload/v1691601571/YelpCamp/x6msiy1ic50zjnjng79q.jpg" alt="" class="img-fluid">
                    <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= site.title %>
                        </h5>
                        <p class="card-text">
                            <%= site.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= site.location %>
                            </small>
                        </p>
                        <a class="btn btn-primary" href="/sites/<%= site._id %>">View <%= site.title %>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>

        <script>
            const mapToken = '<%-process.env.MAPBOX_TOKEN%>'
            const sites = {"features": <%- JSON.stringify(sites) %>}
        </script>

        <script src="/javascripts/clusterMap.js"></script>